<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ss.gallerypro.theme.ui.TextViewPrimary
        android:id="@+id/title_dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fifteen_dp"
        android:paddingStart="@dimen/ten_dp"
        android:paddingEnd="@dimen/fifteen_dp"
        android:paddingBottom="@dimen/three_dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/accent_blue"
        android:text="@string/delete"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.ss.gallerypro.theme.ui.TextViewSecondary
        android:id="@+id/message_dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/ten_dp"
        android:paddingEnd="@dimen/fifteen_dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:text="Are you sure you want to delete this album?"
        android:textSize="@dimen/sixteen_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal">

        <com.ss.gallerypro.theme.ui.ButtonTheme
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/md_blue_grey_700"
            tools:ignore="ButtonStyle" />

        <com.ss.gallerypro.theme.ui.ButtonTheme
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/delete"
            android:textColor="@color/md_blue_grey_700"
            tools:ignore="ButtonStyle" />

    </LinearLayout>
</LinearLayout>